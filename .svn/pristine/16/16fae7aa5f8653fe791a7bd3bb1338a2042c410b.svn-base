package com.jtmproject.gui;

import java.awt.Color;

import javax.swing.JDialog;
import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JScrollPane;
import javax.swing.JTextArea;

import com.jtmproject.user.MessagesUser;

public class ShowInformationWindow extends JDialog {

	private static final int WINDOW_HEIGHT = 510;
	private static final int WINDOW_WIDTH = 680;
	
	private JPanel contentPane;
	private JTextArea jtaInfoProgram;
	
	private String informationToShow;
	
	/**
	 * constructor
	 */
	public ShowInformationWindow(JFrame jFrame, String informationToShow){
		super(jFrame, true);
		this.setTitle(MessagesUser.getMU().getInformationProgram());
		this.setSize(WINDOW_WIDTH, WINDOW_HEIGHT);
		
		this.informationToShow = informationToShow;

		this.addComponentsToWindow();
		this.setResizable(false);
		this.setVisible(true);
				
	}
	
	/**
	 * this method adds the components
	 */
	private void addComponentsToWindow(){
		addJPanel();
		addJTextArea();
		
		this.setContentPane(contentPane);
		this.setLocationByPlatform(true);
	}
	
	/**
	 * this method adds a JPanel
	 */
	private void addJPanel(){
		contentPane = new JPanel();
		contentPane.setOpaque(true);
		contentPane.setBackground(Color.WHITE);
		contentPane.setLayout(null);
	}
	
	/**
	 * this method adds a JTextArea to show the info about the program
	 */
	private void addJTextArea(){
		jtaInfoProgram = new JTextArea(informationToShow);
		jtaInfoProgram.setEditable(false);
		
		JScrollPane jspCopyScroll = new JScrollPane();
		jspCopyScroll.setSize(WINDOW_WIDTH - 15, WINDOW_HEIGHT - 40);
		jspCopyScroll.setLocation(5, 5);
		
		jspCopyScroll.getViewport().setBackground(Color.WHITE);
		jspCopyScroll.setViewportView(jtaInfoProgram);
		jspCopyScroll.setAutoscrolls(true);
				
		contentPane.add(jspCopyScroll);
		this.add(contentPane);
	}
	
